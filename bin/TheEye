#!/usr/bin/perl -Ilib

use strict;
use warnings;
use TheEye;
use Data::Dumper;

my $mon = TheEye->new(debug=> 1, test_dir => 't');
$mon->load_plugin('Store::RRD');
$mon->load_plugin('Graph::RRD');
$mon->load_plugin('Notify::Prowl');
$mon->rrd_dir('rrds/');
$mon->img_dir('images/');
$mon->prowl_apikeys(['YOURKEYHERE']);
my $results;
@{$results} = $mon->run();
$mon->save($results);
$mon->graph($results);
$mon->notify($results);

#print Dumper($results);
